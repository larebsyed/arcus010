@model Arcus10.Models.Users


@{
    ViewBag.Title = "Users | " + ViewBag.pagename;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<hr />
<div class="container" id="page-userdetails">
    <div class="jumbotron">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-group col-lg-8">
                    <label for="InputName">Email</label>
                    <div class="input-group ">
                        @Html.TextBoxFor(model => model.username, new { @Value = Model.username, @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group col-lg-10">
                    <label for="InputName">Full Name</label>
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.fullname, new { @Value = Model.fullname, placeholder = "Full Name", disabled = "disabled", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="InputEmail">Role</label>
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.role, new { placeholder = "Role", @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group col-lg-8">
                    <button class="btn btn-warning" onclick="editUser(this)" id="submit-profile-update" type="submit">&nbsp;&nbsp;Edit&nbsp;&nbsp;</button>
                </div>

            </div>

        </div>
    </div>
    <span style="display:none"> @Html.ActionLink("Edit", "Edit", new { id = Model.username }, new { @class = "actionlnkClick" }) </span>
</div>

<p>
    <div class=" col-md-2 pull-left">
        <ul class="pager">
            <li class="previous">@Html.ActionLink("← Back", "Index")</li>            
        </ul>
    </div>
    
</p>
<script>
    function editUser(obj) {       
        $('#page-userdetails').find('a.actionlnkClick')[0].click();      
    }

</script>