@model Arcus10.Models.Users

@{
    ViewBag.Title = "Users | " + ViewBag.pagename;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Create New User</h2>



@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formUserCreate" }))
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="container" id="page-createuser">
        <div class="jumbotron">
            <div class="row">
                <form role="form">
                    <div class="col-lg-8">
                        <div class="form-group col-lg-8">
                            <label for="InputName">Email</label>
                            <div class="input-group ">
                                @Html.TextBoxFor(model => model.username, new {  placeholder = "Email", @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group col-lg-10">
                            <label for="InputName">Full Name</label>
                            <div class="input-group col-lg-8">
                                @Html.TextBoxFor(model => model.fullname, new {  placeholder = "Full Name", required = "required", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="InputEmail">Role</label>
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.role, new { placeholder = "Role", @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group col-lg-8">
                            <label for="InputEmail">Password</label>
                            <div class="input-group">
                                @Html.PasswordFor(model => model.password, new { placeholder = "Password", @class = "form-control", type = "password", required = "required" })
                            </div>
                        </div>
                        <div class="form-group col-lg-8">
                            <button class="btn btn-primary" id="submit-user-create" type="submit">&nbsp;&nbsp;Submit&nbsp;&nbsp;</button>
                        </div>

                    </div>
                </form>
                <div class="col-lg-4">
                    <div class="col-md-12">
                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-success">
                                <strong><span class="glyphicon glyphicon-ok"></span> Updated Successfully</strong>
                            </div>
                        }

                        <div id="showValidationCreateUser" class="alert alert-danger" style="display:none;">
                            <strong> @Html.ValidationSummary(true)</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

<p>
    <div class=" col-md-2 pull-left">
        <ul class="pager">
            <li class="previous">@Html.ActionLink("← Back", "Index")</li>
        </ul>
    </div>
</p>



